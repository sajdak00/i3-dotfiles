#Assigns
assign [class="Discord"] workspace $ws10
assign [class="Steam"] workspace $ws9
for_window [class="Gnome-calculator"] floating enable
for_window [class="scrcpy"] floating enable

#Binds
bindsym $mod+g exec chromium
bindsym $mod+p exec pcmanfm
bindsym $mod+b exec st fff
bindsym $mod+q exec qutebrowser
bindsym $mod+minus gaps inner all minus 5
bindsym $mod+equal gaps inner all plus 5
bindsym Ctrl+Print exec scrot '%Y%m%d_%H%M%S.png' -e 'mv $f /home/kuba/Obrazy/ScreenShots/'

bindcode $mod+34 exec picom
bindcode $mod+35 exec killall picom
bindcode $mod+Shift+35 exec /home/kuba/.config/polybar/launch.sh

#Border & Title
for_window [class="^.*"] border pixel 0, title_format " %title "
gaps inner 10
gaps outer 0

#Backlight
bindsym XF86MonBrightnessUp exec brightnessctl s +10%
bindsym XF86MonBrightnessDown exec brightnessctl s 10%-
#bindsym XF86MonBrightnessUp exec xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec xbacklight -dec 10

#Audio
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +2%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -2%
bindsym XF86AudioMicMute exec pactl set-source-mute 1 toggle

#Scripts
exec_always /home/kuba/.config/autostart/mouse.sh
exec /home/kuba/.config/autostart/brightnessctl.sh
exec /home/kuba/.config/autostart/blankscreenoff.sh
exec /home/kuba/.config/autostart/autostart.sh

