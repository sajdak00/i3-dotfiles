bindsym $mod+equal gaps inner all plus 4

bindcode $mod+34 exec polybar example
bindcode $mod+35 exec killall polybar
bindcode $mod+Shift+35 exec killall polybar && exec polybar example

#Border & Title
for_window [class="^.*"] border pixel 1, title_format " %title "
gaps inner 10
gaps outer 0

